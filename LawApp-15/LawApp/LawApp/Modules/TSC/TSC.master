<%@ Master Language="C#" MasterPageFile="~/Site.Master" AutoEventWireup="true" CodeBehind="TSC.master.cs" Inherits="LawAppWeb.Modules.TSC.TSC" %>

<asp:Content ContentPlaceHolderID="HeadContent" runat="server">
    <link href="<%: ResolveUrl("~/Content/Modules/TSC/Main.css") %>" rel="stylesheet" />
    <link href="<%: ResolveUrl("~/Content/slider.css") %>" rel="stylesheet" />
    <link href="<%: ResolveUrl("~/Content/Modules/TSC/Holidays.css") %>" rel="stylesheet" />
