            <div class="col-md-12 column">
                <div class="alert alert-dismissable alert-success">
                     <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4>Alert!</h4> <strong>Success</strong> message would go here <a href="#" class="alert-link">alert link</a>
                </div>
            </div>
        </div>
        <div class="row clearfix" id="TSC_MASTER_HOLDER">
            <asp:ContentPlaceHolder ID="TSCProduct_Holder" runat="server"></asp:ContentPlaceHolder>
        </div>
    </div>

</asp:Content>
